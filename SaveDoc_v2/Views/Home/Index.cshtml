<div class="row">
    <div class="col-md-3">
        <!-- small box -->
        <div class="small-box bg-green">
            <div class="inner">
                <h3 style="font-size: 30px">Documentos</h3>
                <p>Almacén de documentos</p>
            </div>
            <div class="icon">
                <i class="ion ion-document"></i>
            </div>
            <a href="@Url.Action("Index", "Documento")" class="small-box-footer" style="height: 35px; line-height: 2.2">Más Información <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>

    <div class="col-md-3">
        <!-- small box -->
        <div class="small-box bg-green">
            <div class="inner">
                <h3 style="font-size: 30px">Áreas</h3>
                <p>Almacén de áreas</p>
            </div>
            <div class="icon">
                <i class="ion ion-map"></i>
            </div>
            <a href="@Url.Action("Index", "Area")" class="small-box-footer" style="height: 35px; line-height: 2.2">Más Información <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>

    @if (ViewBag.RolActual == "Administrador")
    {

        <div class="col-md-3">
            <!-- small box -->
            <div class="small-box bg-green">
                <div class="inner">
                    <h3 style="font-size: 30px">Usuarios</h3>
                    <p>Administrar Cuentas</p>
                </div>
                <div class="icon">
                    <i class="ion ion-person-stalker"></i>
                </div>
                <a href="@Url.Action("AdministrarCuentas", "Account")" class="small-box-footer" style="height: 35px; line-height: 2.2">Más Información <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>

        <div class="col-md-3">
            <!-- small box -->
            <div class="small-box bg-green">
                <div class="inner">
                    <h3 style="font-size: 30px">Roles</h3>
                    <p>Administrar Roles</p>
                </div>
                <div class="icon">
                    <i class="ion ion-merge"></i>
                </div>
                <a href="@Url.Action("AdministrarRoles", "Account")" class="small-box-footer" style="height: 35px; line-height: 2.2">Más Información <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>       
    }

</div>

