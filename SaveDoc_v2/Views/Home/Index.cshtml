@{
    ViewBag.Title = "Bienvenido a DocSave!";
    ViewBag.SubTitle = "Sistema de almacenaje de documentos";
    ViewBag.url = @Url.Action("Index", "Home");
    Layout = "~/Views/Shared/_LayoutDoc.cshtml";
}
